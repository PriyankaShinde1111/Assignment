@model Employee
@{
    ViewData["Title"] = "EmployeeForm";
}
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<h1 class="text-warning">EmployeeForm</h1>
<form asp-controller="Home" asp-action="DisplayEmployeeData" method="post" class="container">
    <div asp-validation-summary="All" class="text text-danger"></div>
    EmpID:<input type="text" asp-for="EmpId" class="form-control" />
    <span asp-validation-for="EmpId"></span>
    <br />
    EmpName:<input type="text" asp-for="EmpName" class="form-control" />
    <span asp-validation-for="EmpName"></span>
    <br />
    Salary:<input type="text" asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary"></span>
    <br />
    <button type="submit" class="btn btn-success">Submit</button>

</form>


