@model RegisteredEntries
@{
    ViewData["Title"] = "RegistrationForm";
}
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<h1 class="text-primary">RegistrationForm</h1>

    <form asp-controller="Assignment" asp-action="RegisterPerson" method="post">
        @*<div asp-validation-summary="All" class="text text-danger"></div>*@
        Name:<input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text text-danger"></span>
        <br />
        Email:<input type="text" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text text-danger"></span>
        <br />
        Phone:<input type="text" asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text text-danger"></span>
        <br />
        WillAttend:<select asp-for="WillAttend" class="form-control" name="confirmation">
            <option value="" selected disabled hidden>Confirmation</option>
            <option value="true">Yes, I'll be there</option>
            <option value="false">No, I can't come</option>
        </select>
        <span asp-validation-for="WillAttend" class="text text-danger"></span>
        <br />
        <button type="submit" class="btn btn-success">Register</button>

     </form>

